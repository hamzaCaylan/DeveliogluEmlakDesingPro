@using EntityLayer.Concrete
@model List<Emlak>

<section id="Populer ilanlar" class="section property" aria-label="property">
    <div class="container">

        <h2 class="h2 section-title">Populer ilanlar</h2>

        <p class="section-text">
            En populer  ve yeni ilanlar.
        </p>

        <ul class="property-list">
            @for (int i = 0; i < 2; i++) 
            {

                <li>
                    <div class="property-card">

                        <figure class="card-banner img-holder" style="--width: 800; --height: 533;">
                            <img src="~/images/property-1.jpg" width="800" height="533" loading="lazy"
                                 alt="@Model[i].EmlakName" class="img-cover">
                        </figure>

                        @*<button class="card-action-btn" aria-label="add to favourite">
                            <ion-icon name="heart" aria-hidden="true"></ion-icon>
                        </button>*@

                        <div class="card-content">
                           
                            <h3 class="h3">
                                <a href="/Detay/IlanDetaylari/@Model[i].EmlakID" class="card-title">@Model[i].EmlakName </a>
                            </h3>

                            <ul class="card-list">

                                <li class="card-item">
                                    <div class="item-icon">
                                        <ion-icon name="cube-outline"></ion-icon>
                                    </div>

                                    <span class="item-text">@Model[i].EmlakMetreKare M²</span>
                                </li>

                                <li class="card-item">
                                    <div class="item-icon">
                                        <ion-icon name="bed-outline"></ion-icon>
                                    </div>

                                    <span class="item-text">@Model[i].EmlakOda Oda</span>
                                </li>

                                <li class="card-item">
                                    <div class="item-icon">
                                        <ion-icon name="man-outline"></ion-icon>
                                    </div>

                                    <span class="item-text">@Model[i].EmlakKat</span>
                                </li>

                            </ul>

                            <div class="card-meta">

                                <div>
                                    <span class="meta-title">Fiyat</span>

                                    <span class="meta-text">@Model[i].EmlakYayinda</span>
                                </div>

                                <div>
                                    <span class="meta-title">Rating</span>

                                    <span class="meta-text">

                                        <div class="rating-wrapper">
                                            <ion-icon name="star"></ion-icon>
                                            <ion-icon name="star"></ion-icon>
                                            <ion-icon name="star"></ion-icon>
                                            <ion-icon name="star"></ion-icon>
                                            <ion-icon name="star"></ion-icon>
                                        </div>

                                        <span>5.0</span>

                                    </span>
                                </div>

                            </div>

                        </div>

                    </div>
                </li>

            }
            <li>
                <div class="property-card">

                    <figure class="card-banner img-holder" style="--width: 800; --height: 533;">
                        <img src="~/images/property-1.jpg" width="800" height="533" loading="lazy"
                             alt="Model[i].EmlakName" class="img-cover">
                    </figure>
                                      

                    <div class="card-content">

                        

                        <ul class="card-list">

                            

                            <li class="card-item">
                                <div class="item-icon">
                                    <ion-icon name="cube-outline"></ion-icon>
                                </div>
                                <h3 class="h3">
                                    <a href="/List/Ilanlar" class="navbar-link" data-nav-link>İlan Listesi</a>
                                </h3>

                            </li>
                            <a class="headerlink" href="#Populer ilanlar" title="Link to this heading">#</a>
                           

                        </ul>

                        

                       

                    </div>

                </div>
            </li>


        </ul>

    </div>
</section>


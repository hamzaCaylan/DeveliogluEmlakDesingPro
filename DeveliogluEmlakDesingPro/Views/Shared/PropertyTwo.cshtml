@using EntityLayer.Concrete
@model List<Emlak>

<section class="section property" aria-label="property">
    <div class="container">

        <h2 class="h2 section-title">Featured Properties</h2>

        <p class="section-text">
            A great plateform to buy, sell and rent your properties without any agent or commisions.
        </p>

        <ul class="property-list">
            @foreach (var item in Model)
            {

                <li>
                    <div class="property-card">

                        <figure class="card-banner img-holder" style="--width: 800; --height: 533;">
                            <img src="~/images/property-1.jpg" width="800" height="533" loading="lazy"
                                 alt=" @item.EmlakName" class="img-cover">
                        </figure>

                        <button class="card-action-btn" aria-label="add to favourite">
                            <ion-icon name="heart" aria-hidden="true"></ion-icon>
                        </button>

                        <div class="card-content">

                            <h3 class="h3">
                                <a href="/Detay/IlanDetaylari/@item.EmlakID" class="card-title">@item.EmlakName" </a>
                            </h3>

                            <ul class="card-list">

                                <li class="card-item">
                                    <div class="item-icon">
                                        <ion-icon name="cube-outline"></ion-icon>
                                    </div>

                                    <span class="item-text">@item.EmlakMetreKare M²</span>
                                </li>

                                <li class="card-item">
                                    <div class="item-icon">
                                        <ion-icon name="bed-outline"></ion-icon>
                                    </div>

                                    <span class="item-text">@item.EmlakOda. Oda</span>
                                </li>

                                <li class="card-item">
                                    <div class="item-icon">
                                        <ion-icon name="man-outline"></ion-icon>
                                    </div>

                                    <span class="item-text">@item.EmlakKat.</span>
                                </li>

                            </ul>

                            <div class="card-meta">

                                <div>
                                    <span class="meta-title">Fiyat</span>

                                    <span class="meta-text">@item.EmlakYayinda</span>
                                </div>
                                <div>
                                    <span class="meta-title">Fiyat</span>

                                    <span class="meta-text">@item.BolgeMahalles.BolgeMahalleName</span>
                                </div><div>
                                    <span class="meta-title">Fiyat</span>

                                    <span class="meta-text">@item.EmlakTips.EmlakTipName</span>
                                </div><div>
                                    <span class="meta-title">Fiyat</span>

                                    <span class="meta-text">@item.EmlakTurs.EmlakTurName</span>
                                </div>
                                <div>
                                    <span class="meta-title">Fiyat</span>

                                    <span class="meta-text">@item.Yoneticis.YoneticiAdi
                                    </span>
                                </div>

                                <div>
                                    <span class="meta-title">Rating</span>

                                    <span class="meta-text">

                                        <div class="rating-wrapper">
                                            <ion-icon name="star"></ion-icon>
                                            <ion-icon name="star"></ion-icon>
                                            <ion-icon name="star"></ion-icon>
                                            <ion-icon name="star"></ion-icon>
                                            <ion-icon name="star"></ion-icon>
                                        </div>

                                        <span>5.0</span>

                                    </span>
                                </div>

                            </div>

                        </div>

                    </div>
                </li>

            }


        </ul>

    </div>
</section>

